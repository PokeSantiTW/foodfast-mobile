<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ligth_green" />
            <corners android:radius="@dimen/cardview_foods_corner_radius" />
        </shape>
        <inset android:inset="@dimen/cardview_foods_compat_inset" />
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/normal_green" />
            <corners android:radius="@dimen/cardview_foods_corner_radius" />
        </shape>
        <inset android:inset="@dimen/cardview_foods_compat_inset" />
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/cardview_foods_corner_radius" />
        </shape>
        <inset android:inset="@dimen/cardview_foods_compat_inset" />
    </item>
</selector>